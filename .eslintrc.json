{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "standard-with-typescript",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "@typescript-eslint/indent": [
            "error",
            4
        ],
        "@typescript-eslint/explicit-member-accessibility": [
            "error"
        ]
    },
    "ignorePatterns": [
        "**/wasmd_cpp.js",
        "**/build/*"
    ]
}
